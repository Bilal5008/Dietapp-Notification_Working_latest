<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="?attr/cardbackground"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/abc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="?attr/cardbackground"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/id_selectdiet"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ninfactirfastforwardbutton" />

                    <include


                        layout="@layout/nin_factor">


                    </include>
                </LinearLayout>


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/belowucan"
                    android:textAlignment="gravity"
                    android:textAllCaps="true"
                    android:textColorHint="@color/tintcolor"
                    android:textSize="20dp"
                    android:textStyle="bold">


                </TextView>


                <Button

                    android:id="@+id/id_calculate"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Calculate"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/id_valiktin"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Vlatkins diet plan"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/id_inform"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="inform"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/id_educate"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="educate"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/id_fight"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="fight"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/id_certify"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="certify"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/id_affiliate"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/padd_10"
                    android:background="@color/colororange"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="affiicate"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
</LinearLayout>

